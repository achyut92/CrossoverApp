<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success <% if(noMessage){%>hidden<%}%>">
      <%= successMsg %>
      </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-9">
    <div id="productListWrapper" data-ng-app="productListModule" data-ng-controller="productListContoller">
      <div class="row" ng-repeat="product in products">
        <div class="col-sm-4 col-md-4" ng-repeat="pc in product">
          <div class="thumbnail">
            <img src="images/{{pc.imgUrl}}"/>
            <div class="caption">
              <h3>{{pc.name}}</h3>
              <p class="description">{{pc.details}}</p>
              <div class="clearfix">
                <p class="pull-left">{{pc.price | currency:'$'}}</p>
                <% if(user){%><a href="products/add-to-cart/{{pc._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
                <%}%></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


    <div class="col-sm-3">
      <% if(user){%>
      <a href="/products/my-cart" class="pull-left">My Cart:</a>
      <% if(cart){%><span class="badge pull-right">
        <%= cart.totalQty %>
      </span>
      <%}}%>
  </div>
</div>


	
 <script src="/bower_components/angular/angular.min.js"></script>
 <script src="../../javascripts/app/user/productListModule.js"></script>